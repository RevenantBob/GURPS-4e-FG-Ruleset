				<top parent="modesicon" />
				<bottom parent="sub_modes" />
			</anchored>
		</frame_ctsub>
	</template>

	<template name="icon_ctsection_modifiers">
		<icon_ctsection name="modifiersicon">
			<icon>modifiers_down</icon>
		</icon_ctsection>
	</template>
	<template name="sub_ctsection_modifiers">
		<subwindow name="sub_modifiers">
			<anchored>
				<top parent="active_spacer_top" anchor="bottom" relation="relative" offset="10" />
				<left parent="modifiersicon" anchor="right" offset="8" />
