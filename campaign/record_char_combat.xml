<root>
	<windowclass name="charsheet_combat">
		<sheetdata>
		
			<!-- CURRENT STATS -->
			
			<frame_char name="currentattributesframe">
				<bounds>15,0,210,90</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="currentattributesframe" />
				<static textres="char_label_currentattributes" />
			</label_frametop>

			<number_attribute name="current_hps" source="stats.current_hps">
				<anchored to="currentattributesframe" position="insidetopleft" offset="25,40" />
				<tabtarget>
					<next>current_fps</next>
					<prev>dr</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="current_hps" />
				<static>cHP</static>
			</label_attribute>

			<number_attribute name="current_fps" source="stats.current_fps">
				<anchored to="currentattributesframe" position="insidetopleft" offset="85,40" />
				<tabtarget>
					<next>current_move</next>
					<prev>current_hps</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="current_fps" />
				<static>cFP</static>
			</label_attribute>

			<number_attribute name="current_move" source="stats.current_move">
				<anchored to="currentattributesframe" position="insidetopleft" offset="145,40" />
				<tabtarget>
					<next>dodge</next>
					<prev>current_fps</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="current_move" />
				<static>Move</static>
			</label_attribute>

			
			<!-- DEFENSES -->
			<frame_char name="defensesframe">
				<bounds>225,0,-29,90</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="defensesframe" />
				<static textres="char_label_defenses" />
			</label_frametop>

			<number_attribute name="dodge" source="stats.dodge">
				<rollable_dodge />
				<anchored to="defensesframe" position="insidetopleft" offset="25,40" />
				<tabtarget>
					<next>parry</next>
					<prev>move</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="dodge" />
				<static textres="char_label_dodge" />
			</label_attribute>

			<number_attribute name="parry" source="stats.parry">
				<rollable_parry />
				<anchored to="defensesframe" position="insidetopleft" offset="85,40" />
				<tabtarget>
					<next>block</next>
					<prev>dodge</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="parry" />
				<static textres="char_label_parry" />
			</label_attribute>

			<number_attribute name="block" source="stats.block">
				<rollable_block />
				<anchored to="defensesframe" position="insidetopleft" offset="145,40" />
				<tabtarget>
					<next>dr</next>
					<prev>parry</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="block" />
				<static textres="char_label_block" />
			</label_attribute>

			<number_attribute name="dr" source="stats.dr">
				<anchored to="defensesframe" position="insidetopleft" offset="205,40" />
				<tabtarget>
					<next>current_hps</next>
					<prev>block</prev>
				</tabtarget>
			</number_attribute>
			<label_attribute>
				<anchored to="dr" />
				<static textres="char_label_dr" />
			</label_attribute>


			<subwindow name="meleecombat">
				<bounds>0,90,-1,-1</bounds>
				<class>charsheet_meleecombat</class>
			</subwindow>

			<subwindow name="rangedcombat">
				<bounds>0,90,-1,-1</bounds>
				<class>charsheet_rangedcombat</class>
			</subwindow>

			<tabs_charcombat>
				<tab>
					<icon>tab_meleecombat</icon>
					<subwindow>meleecombat</subwindow>
				</tab>
				<tab>
					<icon>tab_rangedcombat</icon>
					<subwindow>rangedcombat</subwindow>
				</tab>
				<activate>1</activate>
			</tabs_charcombat>
		</sheetdata>
	</windowclass>

</root>
