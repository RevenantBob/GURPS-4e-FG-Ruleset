<root>
	<windowclass name="charsheet_notes">
		<sheetdata>

			<!-- NOTES -->			
			<frame_char name="notesframe">
				<bounds>15,0,320,240</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="notesframe" />
				<static textres="char_label_notes" />
			</label_frametop>
			
			<genericcontrol name="rightanchor">
				<anchored to="notesframe" width="0" height="0">
					<top offset="35" />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<genericcontrol name="idelete_header">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<disabled />
			</genericcontrol>
			
			<list_charnote name="noteslist">
				<anchored to="notesframe">
					<left offset="15" />
					<top offset="40" />
					<right offset="-15" />
					<bottom offset="-20" />
				</anchored>
			</list_charnote>
			<scrollbar_list>
				<anchored to="noteslist" />
				<target>noteslist</target>
			</scrollbar_list>

			<button_iedit name="noteslist_iedit">
				<anchored to="noteslist" position="aboveright" offset="5,10" />
				<target>noteslist</target>
			</button_iedit>
			<button_iadd name="noteslist_iadd">
				<anchored to="noteslist_iedit" position="lefthigh" offset="5,0" />
				<target>noteslist</target>
			</button_iadd>

			<!-- POINT SUMMARY -->			
			<frame_char name="summaryframe">
				<bounds>335,0,-29,240</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="summaryframe" />
				<static textres="char_label_summary" />
			</label_frametop>











      <number_charpointtotals name="total_stats_points" source="points_cost_totals.total_stats_points">
        <anchored to="summaryframe" position="insidetopleft" offset="112,30" width="30" height="20" />
        <tabtarget prev="notesframe" next="total_ads_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_stats_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_attributes" />
      </label_pointsummary>

      <number_charpointtotals name="total_ads_points" source="points_cost_totals.total_ads_points">
        <anchored to="total_stats_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_stats_points" next="total_disads_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_ads_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_ads" />
      </label_pointsummary>

      <number_charpointtotals name="total_disads_points" source="points_cost_totals.total_disads_points">
        <anchored to="total_ads_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_ads_points" next="total_quirks_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_disads_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_disads" />
      </label_pointsummary>

      <number_charpointtotals name="total_quirks_points" source="points_cost_totals.total_quirks_points">
        <anchored to="total_disads_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_disads_points" next="total_skills_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_quirks_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_quirks" />
      </label_pointsummary>

      <number_charpointtotals name="total_skills_points" source="points_cost_totals.total_skills_points">
        <anchored to="total_quirks_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_quirks_points" next="total_spells_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_skills_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_skills" />
      </label_pointsummary>

      <number_charpointtotals name="total_spells_points" source="points_cost_totals.total_spells_points">
        <anchored to="total_skills_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_skills_points" next="total_powers_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_spells_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_spells" />
      </label_pointsummary>

      <number_charpointtotals name="total_powers_points" source="points_cost_totals.total_powers_points">
        <anchored to="total_spells_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_spells_points" next="total_other_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_powers_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_powers" />
      </label_pointsummary>

      <number_charpointtotals name="total_other_points" source="points_cost_totals.total_other_points">
        <anchored to="total_powers_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_powers_points" next="total_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_other_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_other" />
      </label_pointsummary>

      <number_charpointtotals name="total_points" source="points_cost_totals.total_points">
        <anchored to="total_other_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_other_points" next="unspent_points" />
      </number_charpointtotals>

      <label_pointsummary>
        <anchored to="total_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_total" />
      </label_pointsummary>

      <number_charpointtotals name="unspent_points" source="points_cost_totals.unspent_points">
        <anchored to="total_points" position="belowleft" offset="0,0" width="30" height="20" />
        <tabtarget prev="total_points" next="descrption" />
      </number_charpointtotals>
      
      <label_pointsummary>
        <anchored to="unspent_points" position="insidetopleft" offset="-97,4" />
		<static textres="char_pointtotal_unspent" />
      </label_pointsummary>


























			<frame_char name="descriptionframe">
				<bounds>15,240,-29,-14</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="descriptionframe" />
				<static textres="char_label_description" />
			</label_frametop>
			<stringu name="description">
				<anchored to="descriptionframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
			<scrollbar_list>
				<anchored to="description" />
				<target>description</target>
			</scrollbar_list>
		</sheetdata>
	</windowclass>

	<windowclass name="char_note">
		<margins control="0,0,0,2" />
		<sheetdata>
		
			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_idelete>
			
			<linkcontrol name="shortcut">
				<anchored to="rightanchor" width="20" height="20">
					<top offset="2" />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<class>charnote</class>
				<readonly />
			</linkcontrol>
			<string_textlistitem name="name">
				<anchored height="20">
					<top offset="2" />
					<left offset="5" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</string_textlistitem>
			
		</sheetdata>
	</windowclass>
</root>
